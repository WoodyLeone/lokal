# Railway PostgreSQL Configuration
# Get this from your Railway project dashboard > Database > Connect
EXPO_PUBLIC_DATABASE_URL=postgresql://postgres:password@mainline.proxy.rlwy.net:25135/railway

# Backend API Configuration
# For local development, use localhost. For production, use your backend URL
EXPO_PUBLIC_API_BASE_URL=https://lokal-prod-production.up.railway.app/api

# App Configuration
EXPO_PUBLIC_APP_NAME=Lokal
EXPO_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
# Set to false to disable features for testing
EXPO_PUBLIC_ENABLE_OBJECT_DETECTION=true
EXPO_PUBLIC_ENABLE_PRODUCT_MATCHING=true
EXPO_PUBLIC_ENABLE_VIDEO_UPLOAD=true
EXPO_PUBLIC_ENABLE_FILE_UPLOAD=true

# Video Configuration
EXPO_PUBLIC_MAX_VIDEO_DURATION=180
# Maximum video duration in seconds (3 minutes = 180 seconds)
# Maximum video size in bytes (500MB = 524288000 bytes)
EXPO_PUBLIC_MAX_VIDEO_SIZE=524288000
# Supported video formats (comma-separated)
EXPO_PUBLIC_SUPPORTED_VIDEO_FORMATS=mp4,mov,avi,mkv

# Object Detection Configuration
# Confidence threshold for object detection (0.0 to 1.0)
EXPO_PUBLIC_CONFIDENCE_THRESHOLD=0.5
# Maximum number of objects to detect
EXPO_PUBLIC_MAX_DETECTED_OBJECTS=10

# Product Matching Configuration
# Maximum number of matched products to return
EXPO_PUBLIC_MAX_MATCHED_PRODUCTS=6
# Product match threshold (0.0 to 1.0)
EXPO_PUBLIC_PRODUCT_MATCH_THRESHOLD=0.3

# Upload Configuration
# Upload timeout in milliseconds (2 minutes = 120000ms)
EXPO_PUBLIC_UPLOAD_TIMEOUT=120000
# Object detection timeout in milliseconds (5 minutes = 300000ms)
EXPO_PUBLIC_DETECTION_TIMEOUT=300000

# Debug Configuration
# Set to true to enable debug logging
EXPO_PUBLIC_DEBUG=false

# Development Configuration
# Set to true to enable development features
EXPO_PUBLIC_DEV_MODE=true
