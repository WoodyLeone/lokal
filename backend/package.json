{
  "name": "lokal-backend-root",
  "version": "1.0.0",
  "description": "Backend server for Lokal - shoppable video app (Root)",
  "main": "app.js",
  "scripts": {
    "start": "node --max-old-space-size=512 --expose-gc --optimize-for-size app.js",
    "dev": "nodemon --max-old-space-size=512 --expose-gc src/server.js",
    "dev-simple": "nodemon --max-old-space-size=512 --expose-gc src/server-simple.js",
    "test": "jest",
    "test:db": "node src/tests/test-database.js",
    "test:connection": "node src/tests/test-database.js",
    "migrate": "node src/config/migrations.js",
    "build": "echo 'No build step required'",
    "postinstall": "node scripts/download-models.js",
    "download-models": "node scripts/download-models.js",
    "check-deployment": "node scripts/check-deployment-readiness.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "compression": "^1.7.4",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0-rc.3",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "proxy-addr": "^2.0.7",
    "python-shell": "^5.0.0",
    "redis": "^5.7.0",
    "sequelize": "^6.35.1",
    "socket.io": "^4.7.4",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.3"
  },
  "keywords": [
    "nodejs",
    "express",
    "video-processing",
    "object-detection",
    "yolo",
    "supabase",
    "redis",
    "caching"
  ],
  "author": "Lokal Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
